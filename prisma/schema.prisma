// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Person {
    id    Int     @default(autoincrement()) @id
    name String
    description String?
    relations PersonRelationPerson[]
    activityPersons ActivityPerson[]
}

model PersonRelation {
    id    Int     @default(autoincrement()) @id
    description String
    personRelationPersons PersonRelationPerson[]
}

model PersonRelationPerson {
    id    Int     @default(autoincrement()) @id
    person_relation_id Int
    person_relation PersonRelation @relation(fields: [person_relation_id], references: [id])
    person_id Int
    person Person @relation(fields: [person_id], references: [id])
}

model Source {
    id    Int     @default(autoincrement()) @id
    name String
}

model Activity {
    id    Int     @default(autoincrement()) @id
    description String?
    activityPersons ActivityPerson[]
}

model ActivityPerson {
    id    Int     @default(autoincrement()) @id
    activity_id Int
    activity Activity @relation(fields: [activity_id], references: [id])
    person_id Int
    person Person @relation(fields: [person_id], references: [id])
}