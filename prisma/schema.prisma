// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Person {
    id    Int     @default(autoincrement()) @id
    name String
    description String?
    personRelationPersons PersonRelationPerson[]
    activityPersons ActivityPerson[]
}

model PersonRelation {
    id    Int     @default(autoincrement()) @id
    description String
    personRelationPersons PersonRelationPerson[]
}

model PersonRelationPerson {
    id    Int     @default(autoincrement()) @id
    personRelationId Int
    personRelation PersonRelation @relation(fields: [personRelationId], references: [id])
    personId Int
    person Person @relation(fields: [personId], references: [id])
}

model Source {
    id    Int     @default(autoincrement()) @id
    name String
    activities Activity[]
}

model Activity {
    id    Int     @default(autoincrement()) @id
    description String?
    sourceId Int?
    source Source? @relation(fields: [sourceId], references: [id])
    activityPersons ActivityPerson[]
}

model ActivityPerson {
    id    Int     @default(autoincrement()) @id
    activityId Int
    activity Activity @relation(fields: [activityId], references: [id])
    personId Int
    person Person @relation(fields: [personId], references: [id])
}