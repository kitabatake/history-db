// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Person {
    id    Int     @default(autoincrement()) @id
    name String
    description String?
}

model PersonRelation {
    id    Int     @default(autoincrement()) @id
    from Int
    to Int
    description String
}